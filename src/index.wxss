@prefix: __wechat-swipeout_;

/* 整个滑块是个 flexbox */
.@{prefix}view {
  display: flex;
}

/* ImoNote: <movable-area> 默认已经为 `position: relative;` 了 */
.@{prefix}area {
  /* position: relative; */
  overflow: hidden;
}

/**
 * ImoNote: HTML 结构和 QA
 * @{prefix}area <- 默认已经 `position: relative;` 了
 *   @{prefix}view <- 默认已经 `position: absolute;` 了
 *     @{prefix}left <- 直接 `posa` 无法实现相对 area 绝对定位，因为 view 默认也 `posa` 了，最后借助了冗余的 html 来实现
 */
/* 呈吸附样式的按钮 */
.@{prefix}left.@{prefix}sticked ,
.@{prefix}right.@{prefix}sticked {
  position: absolute;
  top: 0;
}
.@{prefix}left.@{prefix}sticked {
  left: 0;
}
.@{prefix}right.@{prefix}sticked {
  right: 0;
}
 
/* 左右侧的可视区域是个 flexbox */
.@{prefix}left-content ,
.@{prefix}right-content {
  display: flex;
  flex-wrap: nowrap;
  align-items: stretch; 
  height: 100%;
}

/* 特殊处理：对左侧可视区域向右对齐 */
.@{prefix}left-content {
  float: right;
}

/* TODO:FIXME: 组件内部所有 className 都加上前缀，以防止样式的意外覆盖 */
/* 呈遮盖样式的按钮 */
.@{prefix}button-wrapper {
  position: relative;
}
.@{prefix}button {
  position: absolute;
  top: 0;
  /* text-align: center; */
}
.@{prefix}left .@{prefix}button {
  right: 0;
}
.@{prefix}right .@{prefix}button {
  left: 0;
}

/* icon */
.@{prefix}button {
  display: flex;
  justify-content: center;
}
.@{prefix}button .@{prefix}icon {
  box-sizing: border-box;
  width: 40rpx;
}